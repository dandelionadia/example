{% macro content() %}
    <div class="widgets">
        {{caller()}}
    </div>
{% endmacro %}

{% macro title(title) %}
    <h2 class="widgets__title">{{title}}</h2>
{% endmacro %}

{% macro subtitle(subtitle) %}
    <div class="subtitle">{{subtitle}}</div>
{% endmacro %}

{% macro text(text) %}
    <p class="widgets__text">{{text}}</p>
{% endmacro %}

{% macro button(link, text) %}
    <a class="widgets__btn" href="{{link}}">{{text}}</a>
{% endmacro %}