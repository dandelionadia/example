{% macro container(variant) %}
    <div class="block {% if variant %}block--{{variant}}{% endif %}">
        {{caller()}}
    </div>
{% endmacro %}

{% macro title(title) %}
     <h3 class="block__title">{{title}}</h3>
{% endmacro %}

{% macro subtitle(subtitle) %}
    <h6 class="block__subtitle">{{subtitle}}</h6>
{% endmacro %}

{% macro text(text) %}
    <div class="block__text">{{text}}</div>
{% endmacro %}